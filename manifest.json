{
  "manifest_version":2,
  "name":"Bitcoin Price",
  "description":"Bitcoin Price Monitor and other utilities around Bitcoin",
  "version":"1.0.0",
  "background":{
    "page":"background.html"
  },
  "browser_action":{
    "default_icon":"icon.png",
    "default_popup":"popup.html"
  },
  "author":"Alex Werner <alex@werner.fr>",
  "icons":{
    "128":"icon.png"
  },
  "web_accessible_resources":[
    "icon.png"
  ],
  
  "permissions":[
    "background",
    "notifications",
    "storage",
    "https://api.coinmarketcap.com/",
    "http://www.ecb.europa.eu/"
  ]
}